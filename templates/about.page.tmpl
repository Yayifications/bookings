{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Welcome to the About Page</h1>
                <p>This is a paragraph of cached content.</p>
                <p>This is another paragraph of cached content.</p>
                <p>This came from the template: {{index .StringMap "test"}}</p>

                <p>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        Your remote IP address is: {{index .StringMap "remote_ip"}}
                    {{else}}
                        I don't know your remote IP address. Visit the <a href="/">home page</a> to set it.
                    {{end}}
                </p>
            </div>
        </div>
    </div>
{{end}}
